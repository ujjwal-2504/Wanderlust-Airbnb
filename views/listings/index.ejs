<% layout("/layouts/boilerplate") %>

<body>
  <%- include("../includes/filters.ejs") %>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allListings) { %>
    <a href="/listings/<%=listing.id%>" class="listing-link">
      <div class="listing-card col">
        <img
          src="<%=listing.image.url%>"
          class="card-img-top"
          alt="listing image"
          style="height: 20rem"
        />
        <div class="card-body">
          <div class="card-text mt-2">
            <p><b><%= listing.title %></b></p>
            <p>
              &#8377;<%= listing.price.toLocaleString("en-IN") %> / night
              <i style="font-size: 0.8rem" class="tax-info">
                &nbsp; &nbsp;+18% GST</i
              >
            </p>
          </div>
        </div>
      </div>
    </a>
    <% } %>
  </div>
  <script src="/JS/tax-switch.js"></script>
</body>
